# git
alias gp="git pull"
alias gps="git push"
alias gpsl="git push --force-with-lease"
alias gpsf="git push --force"
alias gpr="git pull --rebase"
alias gb="git for-each-ref --sort=committerdate refs/heads/ --format='%(HEAD) %(color:yellow)%(refname:short)%(color:reset) - %(color:red)%(objectname:short)%(color:reset) - %(contents:subject) - %(authorname) (%(color:green)%(committerdate:relative)%(color:reset))'"
alias gco="git checkout "
alias gcom="git checkout master"
alias gaa="git add -A"
alias gap="git add -p"
alias gc="git commit -m"
alias gca="git commit --amend"
alias gcaa="git commit --amend -C head --no-verify"
alias gicn="git commit --no-verify -m"
alias gfile="git show --name-only"
alias gitloc="git ls-files | xargs wc -l"
alias gs="git status"
alias log="git log --pretty=format:'%Cgreen%ad%Creset %C(yellow)%h%Creset%C(yellow)%d%Creset %s %C(cyan)[%an]%Creset %Cred(%ar)%Creset' --date=short --graph"
alias glog="git log --oneline --decorate --color --graph"

# other
alias zprf="nvim ~/.zprofile"
alias zshc="nvim ~/.zshrc"
alias .zshc="nvim ~/.dotfiles/zsh/zshrc"
alias .als="nvim ~/.dotfiles/zsh/zshalias"
alias .vimc="nvim ~/.dotfiles/vim/vimrc"
alias .i3c="nvim ~/.dotfiles/i3/config"
alias vimc="nvim ~/.vimrc"
alias nvimc="cd ~/.config/nvim;nvim ./init.lua"

alias hi="ping 8.8.8.8"
alias hai="traceroute 8.8.8.8"
alias shrug="echo \"¯\_(ツ)_/¯\" | pbcopy"
alias agent="eval `ssh-agent`"
alias myip="ifconfig | grep 'inet ' | grep -v 127.0.0.1 | cut -d\   -f2"
alias news="wget -O - hackurls.com/ascii"
alias path='echo -e ${PATH//:/\\n}' # view $PATH with linebreaks
alias psa="ps aux | grep -i "
alias tar=$(which gtar) # brew install gnu-tar
alias tarthis="tar -pczf "
alias untar="tar -zxvf "

alias be="bundle exec"
alias bes="bundle exec spring"
alias nhl="HEADLESS=false"

alias wfsrc="cd ~/ph/infrastructure;aws-vault exec nonprod -- ./scripts/console -e master"
alias wfprwc="cd ~/ph/infrastructure;aws-vault exec prod -- ./scripts/console -e production -p readwrite"
alias wfprc="cd ~/ph/infrastructure;aws-vault exec prod -- ./scripts/console -e production"
